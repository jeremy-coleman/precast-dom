{
  "compilerOptions": {
    "outDir": "_never",
    "declaration": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["dom", "esnext"],
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "src",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["tools"],
  "exclude": ["node_modules"]
}
